{
  "name": "证券交易推荐系统",
  "author": "Trading Tips Team",
  "desc": "自动化证券交易分析和推荐系统",
  "version": "v0.1.0",
  "tasks": [
    {
      "name": "证券推荐",
      "script": "ql_task.py",
      "cron": "0 9 * * *",
      "desc": "每天早上9点执行"
    }
  ],
  "envs": [
    {
      "name": "TASK_MODE",
      "desc": "任务模式",
      "default": "full",
      "required": false
    },
    {
      "name": "USE_LOCAL_DATA",
      "desc": "使用本地数据",
      "default": "true",
      "required": false
    },
    {
      "name": "MAX_STOCKS",
      "desc": "最大股票数",
      "default": "100",
      "required": false
    },
    {
      "name": "MIN_SCORE",
      "desc": "最低分数",
      "default": "60",
      "required": false
    }
  ]
}